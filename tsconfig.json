{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": false,
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"app/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"skipLibCheck": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"outDir": "lib.browser"
	},
	"include": [
		"app/**/*.ts",
		"app/**/*.vue"
	],
	"exclude": [
		"./node_modules/*"
	]
}
